@page
@using Kapow.Areas.Identity.Pages.Account;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <style>
        body {
            background-image: url('https://img.freepik.com/premium-vector/abstract-smooth-blur-purple-gradient-background-website-banner-paper-card-decorative-design_120819-485.jpg?w=1060');
            background-repeat: no-repeat;
            background-size: cover;
        }

        .title {
            text-align: center;
            font-family: cursive;
            color: #dcdfe7cf;
            font-weight: 400;
        }

        .couple-image {
            background-image: url('https://thumbs.dreamstime.com/b/cute-couple-smartphone-online-dating-concept-white-background-illustration-178317605.jpg');
            background-repeat: no-repeat;
            height: 640px;
            width: 800px;
            border-radius: 50px;
            margin-top: 1.5rem;
        }

        .row {
            justify-content: space-between;
        }

        .form-floating {
            margin-bottom: 12px;
        }

        .submit-button {
            background-color: #502143;
            border-radius: 0.5rem;
            border-color: #1d0726;
            margin-bottom: 12px;
        }
    </style>
</head>
<h1 class="title">Welcome To Restaurant Roulette!</h1>

<div class="row">
    <div class="col-md-4" style="margin-top: 4rem;">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 style="color: #502143">Create a new account here!</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-white"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-white"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-white"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary submit-button">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2 couple-image">
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
