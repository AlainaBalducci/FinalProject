@page
@using Kapow.Areas.Identity.Pages.Account;
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<head>
    <style>
        body {
            background-image: url('https://img.freepik.com/premium-vector/abstract-smooth-blur-purple-gradient-background-website-banner-paper-card-decorative-design_120819-485.jpg?w=1060');
            background-repeat: no-repeat;
            background-size: cover;
        }
        .title {
            text-align:center;
            font-family: cursive;
            color: #dcdfe7cf;
            font-weight: 400;
        }
        .couple-image {
            background-image: url('https://thumbs.dreamstime.com/b/cute-couple-smartphone-online-dating-concept-white-background-illustration-178317605.jpg');
            background-repeat: no-repeat;
            height: 640px;
            width: 800px;
            border-radius: 50px;
            margin-top: 1.5rem;
        }
        .row {
            justify-content: space-between;
        }
        .form-floating {
            margin-bottom: 12px;
        }
        a {
            text-decoration: none;
            color: #e6a5b9cf;
        }
        a:hover {
            text-decoration: none;
            color: #dcdfe7cf;
            font-weight: 800;
        }
        .submit-button {
            background-color: #502143;
            border-radius: 0.5rem;
            border-color: #1d0726;
            margin-bottom: 12px;
        }
    </style>
</head>
<body>
    <h1 class="title">Welcome To Restaurant Roulette!</h1>
@*<h2 class="title">Welcome To Restaurant Roulette</h2>*@
<div class="row">
        <div class="col-md-4" style="margin-top: 4rem;">
        <section>
            <form id="account" method="post">
                    <h2 style="color: #502143">Log In</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-white"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-white"></span>
                </div>
                <div>
                    <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label" style="color: #502143">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary submit-button">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2 couple-image">
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
