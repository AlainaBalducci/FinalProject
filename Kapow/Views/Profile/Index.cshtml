@if (Model.Count == 0)
{
    <p>No profiles have been listed yet!</p>
}
else
{
    
        int i = 0;
    

    <div class="row">
        @foreach (Profile profile in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@profile.ImageUrl" alt="Profile Picture">
                    <div class="card-body">
                        <h5 class="card-title"><a asp-controller="Profile" asp-action="About" asp-route-id="@profile.Id">@profile.UserName</a></h5>
                        <p class="card-text">Name: @profile.FirstName</p>
                        <p class="card-text">From: @profile.HomeBase</p>
                    </div>
                </div>
            </div>

            
                i++;
            

            @if (i % 3 == 0 && i != Model.Count)
            {
                @:</div><div class="row">
            }
        }
    </div>

    @if (User.IsInRole("Admin"))
    {
        <p><a asp-controller="Profile" asp-action="Delete">Delete Profile</a></p>
    }
}













