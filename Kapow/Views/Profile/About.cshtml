@model Kapow.Models.Profile

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        table, th, td {
            margin-left: auto;
            margin-right: auto;
            border-collapse: collapse;
            width: 500px;
            text-align: center;
            font-size: 20px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 50%;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        .container {
            padding: 2px 16px;
        }

        .col-1 {
            flex: 0 0 auto;
            width: 50%;
        }

        h4 {
            margin-top: 7px;
            margin-bottom: 18px;
        }

        .profilePic {
            margin-top: 10px;
        }

    </style>
</head>
<body>
    <h1>Profile</h1>
    <br />
    <br />
    <div class="row">
        <div class="card col-1">
            <img src="@Model.ImageUrl" alt="Profile Picture" style="width:100%" class="profilePic">
            <div class="container">
                <h4><b>@Model.UserName</b></h4>
                <p>Name: @Model.FirstName</p>
                <p>From: @Model.HomeBase</p>
            </div>
        </div>
        <div class="col-1">
            <table class="table">
                <tr>
                    <th style="font-size:30px"><u>Restaurant List</u></th>
                </tr>
                <tr>
                    <td>&ensp;@Model.Restaurant1</td>
                </tr>
                <tr>
                    <td>&ensp;@Model.Restaurant2</td>
                </tr>
                <tr>
                    <td>&ensp;@Model.Restaurant3</td>
                </tr>
                <tr>
                    <td>&ensp;@Model.Restaurant4</td>
                </tr>
                <tr>
                    <td>&ensp;@Model.Restaurant5</td>
                </tr>
            </table>
        </div>
        
    </div>

</body>

@if (Model.UserEmail == User.Identity.Name)
{
    <a asp-controller="Restaurant" asp-action="Search" asp-route-id="@Model.Id">Edit Restaurant List</a>
}


